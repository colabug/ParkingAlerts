<?xml version ="1.0" encoding="utf-8"?>
<resources>
    <style name="alert_title" parent="H1">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="alert_location" parent="BodyText">
        <item name="android:textSize">11dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="alert_body" parent="BodyText">
        <item name="android:textSize">12dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!--Heading 1-->
    <style name="H1" parent="@android:style/TextAppearance.Medium">>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Body Text -->
    <style name="BodyText" parent="@android:style/TextAppearance.Medium">>
        <item name="android:textSize">12dp</item>
    </style>
</resources>
