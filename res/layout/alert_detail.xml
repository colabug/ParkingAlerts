<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_detail_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <!--Title-->
    <TextView
        android:id="@+id/alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/alert_title"
        android:text="@string/SAMPLE_ALERT_TITLE"/>

    <!--Location-->
    <TextView
        android:id="@+id/alert_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SAMPLE_ALERT_LOCATION"/>

    <!--Detail-->
    <TextView
        android:id="@+id/alert_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/alert_body"
        android:text="@string/SAMPLE_ALERT_TEXT"/>
</LinearLayout>
